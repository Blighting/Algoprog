<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/helvetica_neue_cyr_medium"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/enterText"
        android:textColor="@color/colorForMainText"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/helvetica_43"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/usernameInEnter"
        android:textColor="@color/colorForMainText"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:fontFamily="@font/helvetica_neue_cyr_thin"
        android:inputType="textPersonName"
        android:lineSpacingMultiplier="1.4"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/helvetica_43"
        android:lineSpacingMultiplier="1.1"
        android:text="@string/passwordInEnter"
        android:textColor="@color/colorForMainText"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:fontFamily="@font/helvetica_neue_cyr_thin"
        android:inputType="textPassword"
        android:lineSpacingMultiplier="1.4"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cb_for_saving_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="15dp"
            android:button="@null"
            android:checked="false"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:fontFamily="@font/helvetica_43"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/rememberMe"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonForLogin"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:background="@android:color/holo_red_light"
            android:fontFamily="@font/helvetica_neue_cyr_medium"
            android:lineSpacingMultiplier="1.1"
            android:onClick="onClickLogin"
            android:text="@string/loginInEnterScreen"
            android:textColor="@color/colorPopup"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
